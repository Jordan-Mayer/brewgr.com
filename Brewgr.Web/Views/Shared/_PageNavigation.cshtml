@model PageableViewModel

@if(Model.Pager.PageCount > 1)
{
    <div class="pager">
        @if(Model.Pager.PageCount > 1)
        {
            <div class="links">
                @if (!Model.Pager.IsFirstPage())
                {
                    <a href="@Model.GetPreviousPageUrl()" class="btn btn-primary btn-lg pull-left" rel="prev"><span class="glyphicon glyphicon-circle-arrow-left"></span> Back</a>
                }

                @if(!Model.Pager.IsLastPage())
				{
				    <a href="@Model.GetNextPageUrl()" class="btn btn-primary btn-lg pull-right" rel="next">Next <span class="glyphicon glyphicon-circle-arrow-right"></span></a>
				}
            </div>
        }
    </div>
}