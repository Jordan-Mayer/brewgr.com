@using Brewgr.Web
@model Brewgr.Web.Core.Model.MiniUserSummary

<div class="thumbnail pull-left">
    <a href="@Url.UserProfileUrl(Model.Username)"><img src="@Model.GetAvatar(75)" alt="@Model.Username"/></a>
    <div class="caption">
        <a href="@Url.UserProfileUrl(Model.Username)">@(Model.Username.Length > 14 ? Model.Username.Substring(0, 11) + "..." : Model.Username)</a>
    </div>
</div>